{
	"easyReplaceInFiles": [
		{
			"files": "readme.txt",
			"from": "Stable tag:\\s?(.+)",
			"type": "regex",
			"to": "Stable tag: $$npm_package_version$$"
		},
		{
			"files": "src/sass/style.scss",
			"from": "Version:\\s?(.+)",
			"type": "regex",
			"to": "Version: $$npm_package_version$$"
		},
		{
			"files": "functions.php",
			"from": "define\\( \\'QOE_VERSION\\'\\, \\'(.+)\\'",
			"type": "regex",
			"to": "define( 'QOE_VERSION', '$$npm_package_version$$'"
		}
	]
}
